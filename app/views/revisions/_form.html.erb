<form style="margin: auto; width: 900px;" class="editor" action="/articles/<%=@article.id%>/revisions" method="post">
  <% if @prev_revision %>
    <textarea name="body" id="revision_editor"><%=@prev_revision_body%></textarea>
  <% else %>
    <textarea name="body" id="revision_editor"></textarea>
  <% end %>
  <script>
    $(document).ready(function(){
      // setInterval(function(){}, 800)
      CKEDITOR.replace( 'revision_editor', {
        allowedContent: true
      });
    });
  </script>
  <input type="submit">
</form>
